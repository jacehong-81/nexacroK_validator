  "scripts": {
    "dev:test": "tsx --tsconfig ./tsconfig.prebuild.json ./test/index.js",
    "build:plugin": "rimraf ./dist && rimraf ./types && tsc",
    "build": "yarn -s build:nexacro && yarn -s build:project1",
    "build:nexacrotest-doc": "yarn build:plugin && yarn workspace frameworkjs build-doc",
    "build:nexacro-doc": "yarn build:plugin && yarn workspace frameworkjs build-doc",
    "build:nexacrotest": "yarn build:plugin && yarn workspace frameworkjs build",
    "build:nexacro": "yarn build:plugin && yarn workspace frameworkjs build",
    "build:production": "cross-env NODE_ENV=production yarn -s build",
    "clean": "yarn workspaces run clean",
    "test": "yarn -s test:nexacro",
    "test:nexacro": "yarn workspace frameworkjs test & yarn workspace frameworkjstest test ",
    "lint": "yarn run ignore-sync && yarn run lint:check",
    "lint:check": "yarn eslint packages/**/*.{js,ts}",
    "lint:fix": "yarn eslint --fix packages/**/*.{js,ts}",
    "fix": "yarn run lint:fix && yarn run format:fix",
    "format": "yarn run format:fix",
    "format:check": "prettier packages/**/*.{html,js,json,md,ts} --check",
    "format:fix": "prettier packages/**/*.{html,js,json,md,ts} --write",
    "postinstall": "husky",
    "ignore-sync": "ignore-sync .",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,mjs,html,md}": "eslint"
  },
  "resolutions": {
    "string-width": "^4.2.0",
    "wrap-ansi": "^7.0.0"
  },
  "packageManager": "yarn@1.22.1",
  "dependencies": {
    "awilix": "^12.0.5",
